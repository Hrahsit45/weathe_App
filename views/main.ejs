<body>
  <section id="Title">
   
    <nav class="navbar navbar-expand-lg navbar-dark ">

        <a class="navbar-brand" href="#">Weath-Web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse ml-auto" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item active">
                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">City-Name</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Contact</a>
              </li>
            </ul>
          </div>

    </nav>
    <div class="container-fluid">
      
    <div class=row>
        <div class="col-lg-6">
            <h1>Best Place to Check Climate Around the Globe</h1>
        </div>
        <div class="col-lg-6">
            <button type="button" class="title-btn btn btn-dark btn-lg">Check-out</button>

            <img class="Title-image"src="public/css/cloud3.jpeg" alt="">
        </div>
    </div>
    </div>

  </section>

  <section id="bar">
   <h2> Search Your City Here
   </h2>
   <form action="/" method="POST">
       <div class="form-group">
           <input type="text" class="form-control" id="" name="name">
       </div>
       <button type="submit" class="srch btn btn-light  btn-block">Submit</button>
   </form>
  </section>
  
  <section id="stats">
      <div class="container-fluid">
      <h2><%= mainTitle %> </h2>
   <div class="row">
       <div class="col-lg-6" id="deta">
        <table class="table table-bordered table-dark table-sm">
           
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Description</td>
                <td><%= description %> </td>
                
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Temperature</td>
                <td><%= temperature %></td>
              
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Min-Temp</td>
                <td><%= mint %> </td>
                
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Max-Temp</td>
                <td><%= maxt %> </td>
               
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Humidity</td>
                <td><%= hum %> </td>
               
              </tr>
             
            </tbody>
          </table>

          <img src=<%= imgg %> >
          </div>
        </div>
        </div>
   
     
  </section>
  <section id="last">
<footer>
    <i class="icon fab fa-instagram-square fa-3x"></i>
    <i class="icon fab fa-github-square fa-3x"></i>

    <div class="copy" >

